

// 割引対象か確認する関数
function checkSale(price) {
  // 条件分岐
  if (price >= 2000) {
    // 価格が2000円以上
    console.log(`${price}円は、割引対象です。`);
  } else {
    // 価格が2000円未満
    console.log(`${price}円は、割引対象ではありません。`);
  }
}

// 価格の確認を行なう
checkSale(1800);
checkSale(1900);
checkSale(2000);
checkSale(2100);



// 結果
1800円は、割引対象ではありません。
1900円は、割引対象ではありません。
2000円は、割引対象です。
2100円は、割引対象です。

